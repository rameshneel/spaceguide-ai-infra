# Database Configuration
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=your_secure_mongo_password_here
MONGO_DATABASE=spaceguideai
MONGODB_URI=mongodb://admin:password@mongodb:27017/spaceguideai?authSource=admin

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_URL=redis://:password@redis:6379
REDIS_HOST=redis
REDIS_PORT=6379

# JWT Configuration
ACCESS_TOKEN_SECRET=replace_with_32_char_random_string_xyz
REFRESH_TOKEN_SECRET=replace_with_32_char_random_string_abc

# CORS
CORS_ORIGINS=https://spaceguideai.com,https://api.spaceguideai.com

# Server Configuration
PORT=5000
HOST=0.0.0.0
FRONTEND_URL=https://spaceguideai.com

# Frontend API URL
VITE_API_URL=https://api.spaceguideai.com/api

# AI Providers (Options: openai, google, anthropic, mock)
